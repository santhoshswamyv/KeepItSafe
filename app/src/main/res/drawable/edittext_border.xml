<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the box -->
<!--    <solid android:color="#FFFFFF"/> &lt;!&ndash; White background color for the box &ndash;&gt;-->

    <!-- Define the border (stroke) color and width -->
    <stroke
        android:color="@color/black"
        android:width="1dp"/>

    <!-- Optional: Set corner radius for rounded corners -->
    <corners android:radius="8dp"/> <!-- Rounded corners with 8dp radius -->

    <!-- Optional: Add padding for inner space -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
